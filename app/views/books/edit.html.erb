<div class="container p-2">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>
<%= render 'layouts/error_books', model: f.object %>
<div class="form-group">
  <label for="inputTitle">Title</label>
  <p><%= f.text_field :title, class: "form-control"  %></p>
  </div>
  <div class="form-group">
  <label for="inputOpinion">Opinion</label>
  <p><%= f.text_area :body, class: "form-control"  %></p>
  <%= f.submit class: " btn btn-success Update User" %>
  <% end %>
  <p>
  <div><%= link_to 'Show', book_path(@book.id) %>
  |
  <%= link_to 'Back', books_path %>
  </div>
  </p>
  </div>
  </div>
  </div>